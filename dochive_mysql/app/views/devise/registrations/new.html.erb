<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<div class="lgnbdd">
	<div class="lgnctr">
		<h2>Sign up</h2>
		<br />
		 <%= devise_error_messages! %>
	</div>
    <div class="clr"></div>
	
	<div class="lgnctr">
		email
	</div>
    <div class="clr"></div>
	
	<div class="lgnctr">
		<%= f.email_field :email, :autofocus => true %>
	</div>

    <div class="clr"></div>
	<div class="lgnctr">
		<br />
		password<div class="x30"></div>confirm&nbsp;&nbsp;&nbsp;&nbsp;
	</div>
    <div class="clr"></div>
	
	<div class="lgnctr">
		<%= f.password_field :password %><div class="x30"></div><%= f.password_field :password_confirmation %>
	</div>
    <div class="clr"></div>
	<div class="lgnctr">
		<br />
		<br />
		<%= f.submit "Sign up" %>
	</div>
	<div class="lgnft">
		<br />
		~ 
		<br />
		<br />
		<%= render "devise/shared/links" %>
	</div>
</div>
<% end %>